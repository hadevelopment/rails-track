<div class="task-show">
	<div class="task-title">
		<h1>  <%= @task.title %> - Task Info</h1>
	</div>
	<div class="task-info">
		<div class="task-items">
			<div class="items-actions">
				<%= render 'items/form' %>
			</div>
			<div class="items">
				<%= render @task.items %>
			</div>
		</div>
	</div>
	<div class="task-config">
		<%= link_to 'Edit', edit_task_path(@task) %> |
		<%= link_to 'Back', tasks_path %>	
	</div>
</div>